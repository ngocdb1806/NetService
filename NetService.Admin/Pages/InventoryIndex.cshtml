@page "/inventory"
@{
    ViewData["Title"] = "Inventory Management";
    ViewData["RouteName"] = "Inventory Management";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index-2.html">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@ViewData["Title"]</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Dữ liệu nhà kho <span id="store_name"></span></h5>
                    <div class="ibox-tools">

                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example" id="tbl_inventory_goods">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá nhập</th>
                                    <th>Số lượng tồn</th>
                                    <th>Số lượng sử dụng một lần</th>
                                    <th>Đơn vị dùng</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá nhập</th>
                                    <th>Số lượng tồn</th>
                                    <th>Số lượng sử dụng một lần</th>
                                    <th>Đơn vị dùng</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        // Module load all goods
        (async function () {
            var response = await fetch(`${BASE_API_URL}/${INVENTORY_URL}/findAllGoods`);
            var data = (await response.json());
            $("#tbl_inventory_goods").dataTable({
                data: data,
                columns: [
                    { data: 'goodName' },
                    { data: 'costPrice' },
                    { data: 'quantityInStock' },
                    { data: 'exchangeValue' },
                    { data: 'nameUnit' }
                ]
            });
        })();
    </script>
}
